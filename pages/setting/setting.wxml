<view class="page">
<view class="page__bd">
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__bd">
                <view url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="{{user.avatarUrl}}" />
                    </view>
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__title">{{user.nicename}}</view>
                        <view class="weui-media-box__desc"></view>
                    </view>
                </view>
            </view>
            
        </view>
       <button class="weui-btn" type="primary" bindtap='exitWechat'>退出</button> 
        
    </view>
</view>
